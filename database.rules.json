{
  "rules": {
    "invoiceCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 10000"
    },
    "orderCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 10009"
    },
    "salesInvoiceCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 0"
    },
    "salesOrderCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 0"
    },
    "invoices": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["number"],
      "$invoiceNumber": {
        ".validate": "newData.hasChildren(['number', 'customerId', 'customerName', 'items', 'subtotal', 'total', 'date', 'status', 'createdAt', 'updatedAt']) && newData.child('number').isNumber() && newData.child('number').val() >= 10000 && $invoiceNumber == newData.child('number').val()"
      }
    },
    "invoice_items": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "company": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "settings": {
      ".read": "auth != null",
      ".write": "auth != null",
      "exchangeRates": {
        ".read": "auth != null",
        ".write": "auth != null",
        "usdToLkr": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "salesOrders": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "itemCodes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$codeId": {
        ".validate": "newData.hasChildren(['code', 'description', 'price']) && newData.child('code').isString() && newData.child('description').isString() && newData.child('price').isNumber()"
      }
    },
    "customers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$customerId": {
        ".validate": "newData.hasChildren(['name', 'contact', 'email', 'status', 'outstanding', 'createdAt', 'updatedAt'])"
      }
    },
    "suppliers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$supplierId": {
        ".validate": "newData.hasChildren(['name', 'address', 'phone'])"
      }
    },
    "inventory": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$itemId": {
        ".validate": "newData.hasChildren(['styleNo', 'createdAt', 'updatedAt']) && newData.child('styleNo').isString() && newData.child('styleNo').val().length > 0"
      }
    },
    "inventoryLogs": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$logId": {
        ".validate": "newData.hasChildren(['inventoryId', 'action', 'quantity', 'timestamp'])"
      }
    },
    "deliveries": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["companyName", "deliveryDate", "status", "createdAt"],
      "$deliveryId": {
        ".validate": "newData.hasChildren(['companyName', 'address', 'deliveryDate', 'status', 'itemsDelivered', 'createdAt'])",
        "companyName": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "deliveryDate": {
          ".validate": "newData.isString() && newData.val().length >= 10"
        },
        "status": {
          ".validate": "newData.isString() && newData.val().matches(/^(Scheduled|In Transit|Delivered|Cancelled)$/)"
        },
        "itemsDelivered": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}