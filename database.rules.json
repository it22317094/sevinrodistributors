{
  "rules": {
    "invoiceCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 10004"
    },
    "invoices": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["number"],
      "$invoiceNumber": {
        ".validate": "newData.hasChildren(['number', 'customerId', 'customerName', 'items', 'subtotal', 'total', 'date', 'status', 'createdAt', 'updatedAt']) && newData.child('number').isNumber() && newData.child('number').val() >= 10004 && $invoiceNumber == newData.child('number').val()"
      }
    },
    "customers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$customerId": {
        ".validate": "newData.hasChildren(['name', 'address', 'telephone', 'uniqueId'])"
      }
    },
    "suppliers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$supplierId": {
        ".validate": "newData.hasChildren(['name', 'address', 'phone'])"
      }
    }
  }
}