{
  "rules": {
    "invoiceCounter": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".validate": "newData.isNumber()"
    },
    "invoices": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["invoiceNumber"],
      "$invoiceId": {
        ".validate": "newData.hasChildren(['invoiceNumber', 'customerId', 'customerName', 'items', 'subtotal', 'total', 'date', 'status', 'createdAt', 'updatedAt'])"
      }
    },
    "customers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$customerId": {
        ".validate": "newData.hasChildren(['name', 'address', 'telephone', 'uniqueId'])"
      }
    },
    "suppliers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$supplierId": {
        ".validate": "newData.hasChildren(['name', 'address', 'phone'])"
      }
    }
  }
}