{
  "rules": {
    "invoiceCounter": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() == null || newData.val() > data.val())",
      ".validate": "newData.isNumber() && newData.val() >= 10000"
    },
    "invoices": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["number"],
      "$invoiceNumber": {
        ".validate": "newData.hasChildren(['number', 'customerId', 'customerName', 'items', 'subtotal', 'total', 'date', 'status', 'createdAt', 'updatedAt']) && newData.child('number').isNumber() && newData.child('number').val() >= 10000 && $invoiceNumber == newData.child('number').val()"
      }
    },
    "invoice_items": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "company": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "settings": {
      ".read": "auth != null",
      ".write": "auth != null",
      "exchangeRates": {
        ".read": "auth != null",
        ".write": "auth != null",
        "usdToLkr": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "orders": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "itemCodes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$codeId": {
        ".validate": "newData.hasChildren(['code', 'description', 'price']) && newData.child('code').isString() && newData.child('description').isString() && newData.child('price').isNumber()"
      }
    },
    "customers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$customerId": {
        ".validate": "newData.hasChildren(['name', 'contact', 'email', 'status', 'outstanding', 'createdAt', 'updatedAt'])"
      }
    },
    "suppliers": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$supplierId": {
        ".validate": "newData.hasChildren(['name', 'address', 'phone'])"
      }
    },
    "inventory": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$itemId": {
        ".validate": "newData.hasChildren(['inventoryNo', 'item', 'description', 'unitPrice', 'category'])"
      }
    },
    "inventoryLogs": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$logId": {
        ".validate": "newData.hasChildren(['inventoryId', 'action', 'quantity', 'timestamp'])"
      }
    }
  }
}